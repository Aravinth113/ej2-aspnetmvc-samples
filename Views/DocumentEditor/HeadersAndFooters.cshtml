@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            @Html.ActionLink("Open in New Tab", "HeaderAndFooter", "DocumentEditor", null, new { @class = "e-btn", @target = "_blank" })
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
       <p>This example demonstrates header and footer support in document editor. Different headers and footers can be added to the first page, odd pages, and even pages. </p>
    </div>
}
@section Description{
    <div id="description">
         <p style="display: block"> Header and footer features in document editor.</p>
    <ul>
        <li>Header and footer for the first page of the document.</li>
        <li>Header and footer for even pages of the document.</li>
        <li>Header and footer for odd pages of the document.</li>
    </ul>
    <p style="display: block"> More information about the document editor features can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/document-editor/getting-started.html">documentation section.</a>
    </p>
    </div>
}

@section Scripts{
    <script></script>
}

@section Meta{
    <meta name="description" content="The Document Editor supports headers and footers. Different headers and footers can be added to the first page, odd pages, and even pages." />
}


<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>