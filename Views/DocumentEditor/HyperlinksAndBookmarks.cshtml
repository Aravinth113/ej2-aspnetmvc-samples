@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            @Html.ActionLink("Open in New Tab", "HyperlinkAndBookmark", "DocumentEditor", null, new { @class = "e-btn", @target = "_blank" })
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
     <p>This example demonstrates hyperlinks and bookmarks support in document editor. A file, mail, webpage, or bookmark can be added as a link to the text. </p>
    </div>
}
@section Description{
    <div id="description">
       <p>In this example, you can find all the link types that can be added to a text or portions of text in the document editor.</p>   
    <ul>
        <li>Link that refers to a webpage.</li>
        <li>Link that refers to a mail.</li>
        <li>Link that refers to a bookmark.</li>        
    </ul>
    <p style="display: block"> More information about the document editor features can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/document-editor/getting-started.html">documentation section.</a>
    </p>
    </div>
}

@section Scripts{
    <script></script>
}

@section Meta{
    <meta name="description" content="The Document Editor supports hyperlinks and bookmarks. The link can be a file, mail, webpage, or bookmark." />
}

<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>