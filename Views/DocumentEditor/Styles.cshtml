@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
        <!-- sample level element  -->
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            Click the button to view the sample
        </div>
        <div class="col-lg-12 col-sm-12 col-md-12 center">
            @Html.ActionLink("Open in New Tab", "Style", "DocumentEditor", null, new { @class = "e-btn", @target = "_blank" })
        </div>
    </div>
}
@section ActionDescription{
    <div id="action-description">
   <p>This example demonstrates character and paragraph formatting using styles in the document editor. Both built-in styles (for example, heading styles) and custom styles can be added. </p>
    </div>
}
@section Description{
    <div id="description">
       <p>In this example, you can use, add, modify, or delete built-in and custom styles.</p>    
    
    <p style="display: block"> More information about the document editor features can be found in this <a target="_blank" href="https://ej2.syncfusion.com/aspnetmvc/documentation/document-editor/getting-started.html">documentation section.</a>
    </p>
    </div>
}

@section Scripts{
    <script></script>
}

@section Meta{
    <meta name="description" content="The Document Editor supports both built-in and custom styles for character format and paragraph format." />
}


<style>
    .center {
        text-align: center;
        font-size: 13px;
        font-weight: 400;
        margin-top: 20px;
    }
</style>