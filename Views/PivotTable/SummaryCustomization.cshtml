                    <title>ASP.NET MVC Pivot Table Show/Hide Totals Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Show/Hide Totals in ASP.NET MVC Pivot Table Control</h1>
                }