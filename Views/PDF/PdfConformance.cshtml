@section ControlsSection{

    <div class="control-section">
        @{Html.BeginForm("PdfConformance", "Pdf", FormMethod.Post);
            {
               <div class="tablediv" style="font-size:14px">
                    <div class="rowdiv">


                        <div class="celldiv">
                            <table>
                                <tr>
                                    <td align="left" width="100%">
                                        <span style="display: inline-block; width: 165px; margin-left: 10px">
                                            @Html.EJS().RadioButton("radioButton1").Label("PDF/A-1b").Name("radioButton").Value("Pdf_A1B").Checked(true).Render()
                                        </span>
                                        <span style="display: inline-block; width: 165px; margin-left: 10px">
                                            @Html.EJS().RadioButton("radioButton2").Label("PDF/A-2b").Name("radioButton").Value("Pdf_A2B").Checked(false).Render()
                                        </span>
                                        <span style="display: inline-block; width: 165px; margin-left: 10px">
                                            @Html.EJS().RadioButton("radioButton3").Label("PDF/A-3b").Name("radioButton").Value("Pdf_A3B").Checked(false).Render()
                                        </span>
                                        <span style="display: inline-block; width: 165px; margin-left: 10px">
                                            @Html.EJS().RadioButton("radioButton4").Label("PDF/X-1a 2001").Name("radioButton").Value("Pdf_X1A2001").Checked(false).Render()
                                        </span>
                                    </td>
                                </tr>
                            </table>
                            <br/>
                            <table width="100%">
                                <tr>
                                    <td>
                                        Click the button to view an PDF document generated by Essential PDF. Please note
                                        that Adobe Reader or its equivalent is required to view the resultant document.
                                    </td>
                                </tr>
                                <tr>
                                    <td align="left">
                                        <br />
                                        <input id="submit" type="submit" class="e-btn" value="Generate PDF" style="width:150px; text-transform:capitalize" />
                                    </td>
                                </tr>
                             </table>
                        </div>
                    </div>
                </div>
               
                Html.EndForm();
            }}
</div>
}
@section ActionDescription{
    <div id="action-description" style="margin-top: 10px">
        This sample demonstrates various PDF conformance support in Essential PDF. Essential PDF provides support for PDF/A-1b, PDF/A-2b, PDF/A-3b, and PDF/X-1a conformance.
    </div>
}
@section Meta{
    <meta name="description" content="Example [C#] to create PDF document in ASP.NET MVC using Syncfusion .NET PDF library."/>
}
@section Description{
    <div id="description" style="margin-top: 10px">
        This feature can be used for long term archiving and standardization.
        More information about conformance can be found in this documentation <a href="https://help.syncfusion.com/file-formats/pdf/working-with-pdf-conformance">section.</a>
    </div>
}

