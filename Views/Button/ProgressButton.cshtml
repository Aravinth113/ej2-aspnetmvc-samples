@using Syncfusion.EJ2
@section ControlsSection{
    <div class="control-section">
    <div class="progress-button-section">
        <div id="progress-button-control">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("spinleft").Content("Spin Left").IsPrimary(true).Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("spinright").Content("Spin Right").IsPrimary(true).SpinSettings(ViewBag.spinSettings[0]).Render()
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("spintop").Content("Spin Top").IsPrimary(true).SpinSettings(ViewBag.spinSettings[1]).Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("spinbottom").Content("Spin Bottom").IsPrimary(true).SpinSettings(ViewBag.spinSettings[2]).Render()
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("roundbtn").SpinSettings(ViewBag.spinSettings[3]).AnimationSettings(ViewBag.animationSettings[3]).CssClass("e-round e-small e-success").IconCss("e-icons e-play-icon").Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("contract").Content("Contract").EnableProgress(true).CssClass("e-small e-success").Begin("contractBegin").End("contractEnd").Render()
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("slideleft").Content("Slide Left").EnableProgress(true).SpinSettings(ViewBag.spinSettings[3]).AnimationSettings(ViewBag.animationSettings[0]).CssClass("e-flat e-success").Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("slideright").Content("Slide Right").EnableProgress(true).SpinSettings(ViewBag.spinSettings[3]).AnimationSettings(ViewBag.animationSettings[1]).CssClass("e-outline e-success").Render()
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("zoomin").Content("Zoom In").EnableProgress(true).SpinSettings(ViewBag.spinSettings[3]).AnimationSettings(ViewBag.animationSettings[2]).CssClass("e-round-corner e-danger").Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("zoomout").Content("Zoom Out").EnableProgress(true).SpinSettings(ViewBag.spinSettings[3]).AnimationSettings(ViewBag.animationSettings[3]).CssClass("e-small e-danger").Render()
                    </div>
                </div>
                <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("download").Content("Download").EnableProgress(true).Duration(4000).CssClass("e-hide-spinner e-progress-top").IconCss("e-icons e-download-icon").Render()
                    </div>
                    <div class="col-xs-12 col-sm-12 col-lg-6 col-md-6">
                        @Html.EJS().ProgressButton("disabled").Content("Disabled").Disabled(true).Render()
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
}

@section Meta{
    <meta name="description" content="This demo for Essential JS2 Progress button has progress indicator and spinner. It supports texts, icons, styles, sizes, positions, and its customization." />
}

@section ActionDescription{
    <div id="action-description">
    <p>This sample demonstrates the default functionalities of a progress button. Clicking that button will display a spinner
        and a progress indicator.</p>
</div>
}

@section Description{
    <div id="description">
    <p>
        The progress button visualizes the progression of an operation to indicates the user that a process is happening in the background.
        The progress can be shown with graphics accompanied by a textual representation.
    </p>
    <p>
        In this sample, the progress button contains the content, spinner, progress indicator, and a list of related features that
        can be achieved using
        <code>
                    <a target="_blank" class="code" href="http://ej2.syncfusion.com/aspnetmvc/documentation/progress-button/api-progressButton.html#content">content,
                    </a>
        </code>
        <code>
                    <a target="_blank" class="code" href="http://ej2.syncfusion.com/aspnetmvc/documentation/progress-button/api-progressButton.html#cssClass">cssClass,
                    </a>
        </code>and
        <code>
                <a target="_blank" class="code" href="http://ej2.syncfusion.com/aspnetmvc/documentation/progress-button/api-progressButton.html#enableProgress">enableProgress
                </a>
        </code>property.
    </p>
    <p>
        More information about progress button can be found in this
        <a target="_blank" href="http://ej2.syncfusion.com/aspnetmvc/documentation/progress-button/getting-started.html">
            documentation section</a>.
    </p>
</div>
}

<script>
    function contractBegin() {
        this.element.classList.add('e-round');
    }

    function contractEnd() {
        this.element.classList.remove('e-round');
    }
</script>

<style>
   #progress-button-control {
        width: 100%;
        margin: 8% 0;
        text-align: center;
    }

    @@media only screen and (max-width: 500px) {
        #progress-button-control {
            margin-left: -11%;
        }
    }

    .progress-button-section {
        width: 80%;
        margin: auto;
    }

    #progress-button-control .col-xs-12 {
        margin: 18px 0;
    }

    #contract.e-progress-active .e-btn-content {
        display: none;
    }

    #contract {
        transition: all .3s cubic-bezier(.175, .885, .32, 1) 100ms;
    }

    .e-play-icon::before {
        content: '\e798';
        font-size: 12px;
    }

    .e-bigger .e-play-icon::before {
        font-size: 14px;
    }

    .e-download-icon::before {
        content: '\e824';
    }

    #roundbtn .e-play-icon {
        margin-top: -2px;
    }

    .material #roundbtn .e-play-icon {
        margin-top: 0;
    }
</style>