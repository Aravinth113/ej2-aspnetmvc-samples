@using Syncfusion.EJ2
@using Syncfusion.EJ2.Grids
@{
    ViewBag.Title = "RowHeight";
}

@section ControlsSection{
    <div class="control-section">
        @(Html.EJS().TreeGrid("RowHeight")
            .RowHeight(20)
            .DataSource((IEnumerable<object>)ViewBag.datasource)
            .Columns(col =>
            {
                col.Field("TaskId").HeaderText("Task ID").Width(90).TextAlign(TextAlign.Right).Add();
                col.Field("TaskName").HeaderText("Task Name").Width(180).Add();
                col.Field("StartDate").HeaderText("Start Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
                col.Field("EndDate").HeaderText("End Date").Format("yMd").TextAlign(TextAlign.Right).Width(120).Add();
                col.Field("Duration").HeaderText("Duration").Width(90).TextAlign(TextAlign.Right).Add();
                col.Field("Progress").HeaderText("Progress").Width(90).TextAlign(TextAlign.Right).Add();

            })
           .Toolbar(new List<object>() {
               new { prefixIcon = "e-big-icon", id = "small", align = "Left", tooltipText = "Small" },
               new { prefixIcon = "e-medium-icon", id = "medium", align = "Left", tooltipText = "Medium" },
               new { prefixIcon = "e-small-icon", id = "big", align = "Left", tooltipText = "Large" }
           })
           .RowHeight(20)
           .Height(400)
           .ChildMapping("Children")
           .ToolbarClick("onToolbarClick")
           .TreeColumnIndex(1)
           .Render()
       );
    </div>

     <script>
        function onToolbarClick(args) {
            if (args.item.id === 'small') {
                this.rowHeight = 20;
            }
            if (args.item.id === 'medium') {
                this.rowHeight = 40;
            }
            if (args.item.id === 'big') {
                this.rowHeight = 60;
            }
        }
    </script>
    
    <style type="text/css">
        @@font-face {
            font-family: 'e-grid-rowheight';
            src: url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        .e-small-icon::before {
            font-family: 'e-grid-rowheight';
            content: '\e997';
        }

        .e-medium-icon::before {
            content: '\e94c';
        }

        .e-big-icon::before {
            font-family: 'e-grid-rowheight';
            content: '\e74c';
        }
    </style>

}

@section Meta{
    <meta name="description" content="This demo explains the way of customizing the row height of Syncfusion Essential JS2 TreeGrid control." />
}


@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the row height feature of the TreeGrid. In this demo, the row height for all the TreeGrid rows can be changed as 20px, 40px and 60px through ToolBar button click.</p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            TreeGrid has provide an option to customize the row height by using <code>RowHeight</code> property of treegrid.
        </p>
        <p>
            In this sample, we have enabled an option in Toolbar to customize the row height of TreeGrid to 20px, 40px and 60px.
        </p>
    </div>
}