@using Syncfusion.EJ2
@using Syncfusion.EJ2.Grids
@{
    ViewBag.Title = "HeaderTemplate";
}

@section ControlsSection{
    <div class="control-section">
        @Html.EJS().TreeGrid("TreeGrid").DataSource((IEnumerable<object>)ViewBag.datasource).Columns(col =>
       {
           col.Field("Id").HeaderText("Task ID").Width(90).TextAlign(TextAlign.Right).Add();
           col.Field("Name").HeaderTemplate("#projectName").Width(130).Add();
           col.Field("StartDate").HeaderTemplate("#dateTemplate").Format("yMd").TextAlign(TextAlign.Right).Width(140).Add();
           col.Field("Resources").HeaderTemplate("#resource").Width(130).TextAlign(TextAlign.Right).Add();
           col.Field("Duration").HeaderTemplate("#durationTemplate").Width(110).TextAlign(TextAlign.Right).Add();
           col.Field("PercentDone").HeaderTemplate("#progressTemplate").Width(100).TextAlign(TextAlign.Right).Add();
       }).Height(410).ChildMapping("Children").TreeColumnIndex(1).Render()
    </div>
    <script type="text/x-template" id="resource">
        <div>
            <div>
                <img src="../Content/images/treegrid/Resources.png" width="20" height="20" class="e-image" />
                <span>&nbsp;Resources</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="projectName">
        <div>
            <div>
                <img src="../Content/images/treegrid/Taskname.png" width="20" height="20" class="e-image" />  
                <span>&nbsp;Task Name</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="dateTemplate">
        <div>
            <div>
                <img src="../Content/images/treegrid/Startdate.png" width="20" height="20" class="e-image" />
                <span>&nbsp;Start Date</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="durationTemplate">
        <div>
            <div>
                <img src="../Content/images/treegrid/duration.png" width="20" height="20" class="e-image" /> 
                <span>&nbsp;Duration</span>
            </div>
        </div>
    </script>
    <script type="text/x-template" id="progressTemplate">
        <div>
            <div>
                <img src="../Content/images/treegrid/progress.png" width="20" height="20" class="e-image" />  
                <span>&nbsp;Progress</span>
            </div>
        </div>
    </script>

}

@section Meta{
    <meta name="description" content="This demo explains how to customize column headers to show additional HTML elements, such as icons, images, etc. in Essential JS2 TreeGrid control." />
}


@section ActionDescription{
    <div id="action-description">
        <p>This sample demonstrates the TreeGrid header template feature. In this sample, we have shown custom icons in the column headers.</p>
    </div>
}

@section Description{
    <div id="description">
        <p>
            The TreeGrid provides a way to define a custom element in header element. <code>Columns->HeaderTemplate</code> property accepts either string or HTML element`s ID value, which will be used as the template for the header cell.
        </p>
        <p>In this demo, we are rendering customized template for all column headers.</p>
        <p>
            More information about Header template can be found in this documentation section
        </p>
    </div>
}