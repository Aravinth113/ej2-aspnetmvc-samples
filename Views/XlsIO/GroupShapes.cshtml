@using Syncfusion.EJ2;

@section ControlsSection{
<div class="control-section">
    @{Html.BeginForm("GroupShapes", "XlsIO", FormMethod.Post);
        <div class="tablediv">
            <div>
                Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    @Html.EJS().RadioButton("rdButtonGroup").Label("Group").Name("Group1").Value("Group").Checked(true).Render()
                    &nbsp;&nbsp;&nbsp;
                    @Html.EJS().RadioButton("rdButtonUngroup").Label("Ungroup").Name("Group1").Value("Ungroup").Checked(false).Render()
                    &nbsp;&nbsp;&nbsp;
                    @Html.EJS().RadioButton("rdButtonUngroupAll").Label("Ungroup All").Name("Group1").Value("UngroupAll").Checked(false).Render()
                </div>
                <br />
            </div>
            <div class="rowdiv">
                <div class="celldiv">
                    <input id="inputbtn" class="e-btn" type="submit" name="button" value="Input Template" style="width:160px;" />
                    <input id="createbtn" class="e-btn" type="submit" name="button" value="Create Document" style="width:160px;" />
                </div>
            </div>
        </div>
    }
</div>
}
@section ActionDescription{
    This sample demonstrates how to use group shapes in spreadsheets using XlsIO.
}
@section Meta{
    <meta name="description" content="This sample demonstrates how to create Excel file with group shapes in ASP.NET MVC using Syncfusion XlsIO (Excel) library." />
}
@section Description{
    <div class="rowdiv">
        Essential XlsIO allows to group multiple shapes and ungroup the shapes in worksheet. The <b>IGroupShape</b> interface is the in-memory representation of the
        group shapes in an Excel workbook.
        <br />
        <br />
        <b>Features:</b>
        <br />
        <br />
        This sample demonstrates following features:
        <br />
        <br />
        <ul>
            <li>Grouping multiple shapes into a single group shape.</li>
            <li>Ungroup the group shape and all its inner shapes.</li>
        </ul>
        <br />
    </div>
}