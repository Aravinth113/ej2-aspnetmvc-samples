@using Syncfusion.EJ2;


@section ActionDescription{
    This sample demonstrates how to convert spreadsheets to PDF documents using XlsIO.
}

@section Meta{
                    <meta name="description" content="This example demonstrates the Excel To PDF in ASP.NET MVC XlsIO control. Explore here for more details."/>
                }

@section Description{
    <p>
        This sample illustrates the conversion of Microsoft Excel document to PDF.
    </p>
    <br />
    <br />Essential XlsIO allows to export Excel document to PDF by using the <b>Convert</b> method of <b>ExcelToPDFConverter</b> class.
    <br />
    <br /><b>Features:</b>
    <br />
    <br />
    <ul>
        <li>Supports conversion of Excel document to PDF document with cell values, cell styles, tables, charts, autoshapes, pictures, etc.</li>
    </ul>
    <br />
    <b>Note:</b> Installation of Essential PDF and ExcelChartToImageConverter is necessary to run this sample
    <br />
}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("ExcelToPDF", "XlsIO", FormMethod.Post);
        <p>
            Clicking the 'Convert to PDF' button will convert the Excel document to PDF. PDF viewer is needed to view the converted PDF document.
        </p>
            <br />
            <label>  PDF Page Setup options </label>
            <div class="celldiv">
                &nbsp; &nbsp; &nbsp;
                <table>
                    <tr>
                        <td>
                            &nbsp; &nbsp; &nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio1").Label("NoScaling").Name("Group1").Value("NoScaling").Checked(false).Render()
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio2").Label("FitAllRowsOnOnePage").Name("Group1").Value("FitAllRowsOnOnePage").Checked(false).Render()
                        </td>
                    </tr>
                    <tr style="height:20px"></tr>
                    <tr>
                        <td>
                            &nbsp; &nbsp; &nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio3").Label("FitAllColumnsOnOnePage").Name("Group1").Value("FitAllColumnsOnOnePage").Checked(false).Render()
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio4").Label("FitSheetOnOnePage").Name("Group1").Value("FitSheetOnOnePage").Checked(true).Render()
                        </td>
                    </tr>
                </table>
            </div>
            <br />
            <div class="rowdiv">
                <label>  Substitute Fonts </label>
            </div>
            <br />
            <div class="rowdiv">
                <div class="celldiv">
                    &nbsp; &nbsp; &nbsp;
                    <input type="checkbox" id="checkfontName" name="checkboxName" value="Font Name" />
                    <label for="checkfontName">
                        Font Name
                    </label>
                    <H6>&nbsp; &nbsp; &nbsp;&nbsp;Missing fonts in the device will be substituted to Calibri.</H6>
                    &nbsp; &nbsp; &nbsp;
                    <input type="checkbox" id="checkfontStream" name="checkboxStream" value="Font Stream" />
                    <label for="checkfontStream">
                        Font Stream
                    </label>
                    <H6>&nbsp; &nbsp; &nbsp;&nbsp;Missing fonts in the device will be substituted from embedded resource.</H6>
                </div>
                <br />
                <div class="celldiv">
                    <table>
                        <tr>
                            <td>
                                <input id="viewtemplate" class="buttonStyle" type="submit" name="button" value="Input Template" style="width:140px;" />
                            </td>
                            <td style="width:10px;"></td>&nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                            <td>
                                <input class="buttonStyle" type="submit" value="Convert to PDF" name="button" style="width:140px;" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <br />
        }
    </div>
    <script>
    document.getElementById('createbtn').onclick = function () {
        if (document.getElementById('radio1').checked == true)
            location.href = '@Html.Raw(@Url.Action("ExcelToPDF", new { @button = "Create", @Group1 = "NoScaling" }))';
        else if (document.getElementById('radio2').checked == true)
            location.href = '@Html.Raw(@Url.Action("ExcelToPDF", new { @button = "Create", @Group1 = "FitAllRowsOnOnePage" }))';
        else if (document.getElementById('radio3').checked == true)
            location.href = '@Html.Raw(@Url.Action("ExcelToPDF", new { @button = "Create", @Group1 = "FitAllColumnsOnOnePage" }))';
        else
            location.href = '@Html.Raw(@Url.Action("ExcelToPDF", new { @button = "Create", @Group1 = "FitSheetOnOnePage" }))';
    };
    </script>
}

@section Title{
                    <title>ASP.NET MVC XlsIO Excel To PDF Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Excel To PDF in ASP.NET MVC XlsIO Control</h1>
                }