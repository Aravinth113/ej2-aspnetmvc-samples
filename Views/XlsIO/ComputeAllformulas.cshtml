@using Syncfusion.EJ2

@section ActionDescription{
    This sample demonstrates how to use formulas in spreadsheets using XlsIO.
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Compute All Formulas in ASP.NET MVC XlsIO control. Explore here for more details."/>
                }
@section Description{
    <p>
        Essential XlsIO can compute the values of a formula entered during run time using the calculate engine that is integrated in XlsIO. This makes it possible to retrieve the values of  formulas that were entered using XlsIO during run time. Currently, over 400 functions are supported, which covers all common usage scenarios.
    </p>
    <br />
    <b>Features:</b>
    <br />
    <br />
    <ul>
        <li>Writing formulas using XlsIO</li>
        <li>Formula calculation using the integrated calculate engine</li>
    </ul>
}
@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("ComputeAllformulas", "XlsIO", FormMethod.Post);
            <h5>
                Click the button to view an Excel spreadsheet generated by Essential XlsIO. Please
                note that Microsoft Excel Viewer or Microsoft Excel is required to view the resultant document.
            </h5>
            <br />
            <h5>  Save As :</h5>
            <div class="celldiv">
                <table>
                    <tr>
                        <td>
                            @Html.EJS().RadioButton("radio1").Label("XLS").Name("SaveOption").Value("Xls").Checked(false).Render()
                        </td>
                        <td>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </td>
                        <td>
                            @Html.EJS().RadioButton("radio2").Label("XLSX").Name("SaveOption").Value("xlsx").Checked(true).Render()
                        </td>
                    </tr>
                </table>
            </div>
            <br />
            <div class="celldiv">
                <input id="generate" class="e-btn" type="submit" name="button" value="Create Document" style="width:150px;" />
            </div>
            }
        </div>
}
@section Title{
                 <title>ASP.NET MVC XlsIO Compute All Formulas Example - Syncfusion Demos </title>
             }
@section Header{
                <h1 class='sb-sample-text'>Example for Compute All Formulas in ASP.NET MVC XlsIO Control</h1>
            }