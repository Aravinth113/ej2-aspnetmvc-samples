@using Syncfusion.EJ2;
@section ActionDescription{
    This sample demonstrates the performance of XlsIO when handling larger files.
}
@section Meta{
                    <meta name="description" content="This example demonstrates the Chart Performance in ASP.NET MVC XlsIO control. Explore here for more details."/>
                }
@section Description{
    Essential XlsIO is known for its high performance and simple APIs that have most of the functionalities of Excel.
    <br />
    <br />
    <b>Features:</b>
    <br />
    <br />
    <ul>
        <li>Creating rich, large reports with styles.</li>
        <li>Performance optimization methods.</li>
        <li>Import on Save option to serialize data while saving the workbook, which is recommended for imprting large data without formatting.</li>
    </ul>
    <b>Notes:</b>
    <br />
	<br />
    <ul>
        <li>When more styles are added, it is recommended that you use global styles within BeginUpdate and EndUpdate calls.</li>
        <li>The use of IMigrant Range will reduce the amount of memory used when large amounts of strings are involved.</li>
    </ul>
}

@section ControlsSection{
    <div class="control-section">
        @{Html.BeginForm("Performance", "XlsIO", FormMethod.Post);
        <div class="rowdiv">
            <p>
                   Click the button to view the Excel document generated by Essential XlsIO. Please 
				   note that Microsoft Excel is required to view the resultant document.
            </p>
        </div>
        <br />
        <div class="rowdiv">
            <div class="celldiv">
                <table>
                    <tr>
                        <td width="200px">Enter the number of rows</td>
                        <td><input type="number" class="e-input" id="textBox1" name="lblRows" value="30000" style="width:100px" /></td>
                    </tr>
                </table>
            </div>
            <br />
            <div class="celldiv">
                <table>
                    <tr>
                        <td width="200px">Enter the number of columns</td>
                        <td> <input type="number" class="e-input" id="textBox2" name="lblColumns" value="50" style="width:100px" /></td>
                    </tr>
                </table>
            </div>
        </div>
        <br />
        <div class="rowdiv">
            <div class="celldiv">
                <p>  Save As :</p>
                @Html.EJS().RadioButton("radio1").Label("XLS").Name("SaveOption").Value("Xls").Checked(false).Change("Disable").Render()
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                @Html.EJS().RadioButton("radio2").Label("XLSX").Name("SaveOption").Value("Xlsx").Checked(true).Change("Enable").Render()
            </div>
            <br />
            <div>
                @Html.EJS().CheckBox("chkImport").Label("Import on Save").Name("import").Value("ImportOnSave").Checked(false).Render()
            <br/>
                <br/>
            <p style="font:smaller">Import on Save option directly serialize data while saving the workbook.</p>
            </div>
             <br />
            <div class="celldiv">
                <input class="e-btn" type="submit" value="Create Document" style=" width:200px;" />
            </div>
            <div class="celldiv">
                <label id="lblStatus">

                </label>
            </div>
        </div>
        <script type="text/javascript">
            function Disable() {
                document.getElementById("chkImport").checked = false;
                document.getElementById("chkImport").disabled = true;
            }
            function Enable() {
                document.getElementById("chkImport").disabled = false;
            }
        </script>
        }
    </div>
}

@section Title{
                    <title>ASP.NET MVC XlsIO Chart Performance Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Chart Performance in ASP.NET MVC XlsIO Control</h1>
                }